@inject LocalizationService _localization﻿

<MudNavMenu>
    <MudNavLink Href="" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Code">@Lang["Godot Code Generator"]</MudNavLink>
</MudNavMenu>

@code {
    public LangInfo Lang { get; set; }
    protected override void OnInitialized()
    {
        Lang = _localization.InitLang((lang) =>
              {
                  Lang = lang;
                  StateHasChanged();
              });
    }
}